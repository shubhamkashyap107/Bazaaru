<%-include('../partials/header.ejs')%>
<%-include('../partials/navbar.ejs')%>
<%-include('../partials/flash.ejs')%>
<%-include('../partials/carousel.ejs')%>

<h1 class="mt-5" style="font-family: Playpen sans;font-size: 100px;max-width: fit-content; margin-left: 100px;">Products</h1>

<div class="container text-center">
    <div class="row ">
      <%for(let item of products){%>
        <div class="card shadow-sm mx-auto position-relative mt-5" style="width: 16rem;">
            <img src="<%=item.img%>" class="card-img-top" alt="..." style="height: 130px;">
            <%if(currentUser && currentUser.wishList.includes(item._id)){%>
              <i class="fa-solid fa-heart fa-2xl" productID="<%=item._id%>" style="color: #ff0000; position: relative; left: 3em; bottom: 1rem; cursor: pointer;"></i>
            <%} else if(currentUser) {%>
              <i class="fa-regular fa-heart fa-2xl" productID="<%=item._id%>" style="color: #000000; position: relative; left: 3em; bottom: 1rem; cursor: pointer;"></i>
              <%}%>
            <div class="card-body">
              <h5 class="card-title"><%=item.name%></h5>
              <p class="card-text"><%=item.desc%></p>
              <a href="/products/<%=item._id%>" class="btn btn-primary">View Product</a>
            </div>
          </div>
      <%}%>
    </div>
  </div>
  <br><br><br>
  
  <div style="display: flex; flex-direction: row; justify-content: space-evenly; align-items: center;  height: 40px;background-color: rgb(224, 226, 227); " >
